<div class="col-md-4 col-md-offset-4">
<div class="row">

 <div class="Form">
	 <div class="heading">
	 	<h1>Create new job</h1>
	 </div>
	 <div class="Name">
		 <div class="form-name">
			 <label for="form-name">Name</label>
			 <%= f.text_field :title, :class => "form-control"%>
		 </div>
		 <div class="form-job">
			 <label for="form-job">Your job</label>
			<%= f.text_area :body, :class => "form-control" %>
		 </div>
		 <div class="form-photos">
		  <label for="form-photos">Select photos</label>
			<%= f.file_field :photos, :class => "btn btn-default",multiple: true %>
		 </div>
		 <div class="form-create" id="create-now">
		 	<button type="submit" class="btn btn-default" id="confirm-purchase">Submit</button>
		 </div>
	 </div>
 </div>

</div>
</div>
